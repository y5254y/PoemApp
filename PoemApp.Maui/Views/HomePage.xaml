<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PoemApp.Maui.Views"
             x:Class="PoemApp.Maui.Views.HomePage"
             Title="Home">

    <CollectionView x:Name="poemList" ItemsLayout="VerticalList">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" CornerRadius="8" HasShadow="True">
                    <StackLayout Padding="10">
                        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16" />
                        <Label Text="{Binding AuthorName}" FontSize="12" TextColor="Gray" />
                        <Label Text="{Binding Content}" LineBreakMode="TailTruncation" MaxLines="3" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>